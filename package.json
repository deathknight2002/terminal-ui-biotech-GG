{
  "name": "@deaxu/terminal-ui",
  "version": "1.0.0",
  "description": "Modern terminal-themed UI component library for React with Bloomberg Terminal aesthetics",
  "type": "module",
  "main": "./dist/terminal-ui.umd.cjs",
  "module": "./dist/terminal-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/terminal-ui.js",
      "require": "./dist/terminal-ui.umd.cjs"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "terminal",
    "dashboard",
    "bloomberg",
    "cyberpunk",
    "dark-theme",
    "typescript"
  ],
  "author": "Deaxu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deaxu/terminal-ui.git"
  },
  "bugs": {
    "url": "https://github.com/deaxu/terminal-ui/issues"
  },
  "homepage": "https://github.com/deaxu/terminal-ui#readme",
  "scripts": {
    "dev": "cd examples && npm install && npm run dev",
    "demo": "cd examples && npm run dev",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
